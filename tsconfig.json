{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": [
      "ES2020",
      "ScriptHost",
      "DOM"
    ],
    "newLine": "lf",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}